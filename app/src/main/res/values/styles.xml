<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circle Image View -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Modern Alert Dialog -->
    <style name="ModernAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="android:textColorPrimary">@color/gray_dark</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.NegativeButton</item>
    </style>

    <style name="MaterialAlertDialog.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="MaterialAlertDialog.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="MaterialAlertDialog.PositiveButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialog.NegativeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>
