<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_light" />
            <corners android:radius="28dp" />
        </shape>
    </item>

    <!-- Button -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/md_theme_secondary"
                android:endColor="@color/md_theme_secondary_light"
                android:type="linear" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</layer-list>
